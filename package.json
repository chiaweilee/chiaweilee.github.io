{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "test": "umi test --coverage",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:sty",
    "lint:es": "eslint --ext .js --ext .jsx . --fix",
    "lint:ts": "tslint \"src/**/*.ts\" \"src/**/*.tsx\" --fix",
    "lint:sty": "stylelint \"**/*.less\" --fix",
    "dist": "gge start",
    "server": "gge start --port=443 --https.key=../key.key --https.cert=../pem.pem",
    "server:dev": "gge start",
    "commit": "npx git-cz",
    "install": "cnpm i egg-github-webhook && cnpm i egg-index && cnpm i egg-rewriter && cnpm i gge && cnpm i github-markdown-css && cnpm i gulp && cnpm i umi && cnpm i umi-plugin-md && cnpm i umi-plugin-react && cnpm i umi-plugin-pwa"
  },
  "dependencies": {
    "egg-github-webhook": "^0.1.0-beta.3",
    "egg-index": "^0.0.1",
    "egg-rewriter": "^1.0.4",
    "gge": "^0.0.0-beta.3",
    "github-markdown-css": "^3.0.1",
    "gulp": "^4.0.2",
    "umi": "^2.13.7",
    "umi-plugin-md": "^0.2.6",
    "umi-plugin-pwa": "0.0.0-beta.0",
    "umi-plugin-react": "^1.15.2"
  },
  "devDependencies": {
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.5",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.16.0",
    "eslint-config-ali": "^7.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react-jsx-filter": "^6.0.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.3.0",
    "prettier": "^1.18.2",
    "stylelint": "^9.10.1",
    "stylelint-config-ali": "^0.3.1",
    "stylelint-config-css-modules": "^1.5.0",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-scss": "^3.11.1",
    "tslint": "^5.20.1",
    "tslint-config-ali": "^0.2.4",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:es",
      "git add"
    ],
    "*.ts": [
      "npm run lint:ts",
      "git add"
    ],
    "*.less": [
      "npm run lint:sty",
      "git add"
    ],
    "*.{js,jsx,json,ts,tsx,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
