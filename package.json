{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "test": "umi test --coverage",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:sty",
    "lint:es": "eslint --ext .js --ext .jsx . --fix",
    "lint:ts": "tslint \"src/**/*.ts\" \"src/**/*.tsx\" --fix",
    "lint:sty": "stylelint \"**/*.less\" --fix",
    "dist": "gge start",
    "server": "ENABLE_NODE_LOG=YES gge start --port=443 --https.key=./cert/1604818_dear.red.key --https.cert=./cert/1604818_dear.red.pem",
    "server:install": "npm install gge egg-index",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "aliba": "^0.2.15",
    "antd": "^3.16.2-alpha.0",
    "current-device": "^0.8.1",
    "dva": "^2.6.0-beta.2",
    "iconfont-symbol": "^0.1.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-transition-group": "^2.8.0",
    "saga-cookie": "^0.2.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/react": "^16.8.12",
    "@types/react-dom": "^16.8.3",
    "@types/react-test-renderer": "^16.8.1",
    "@types/react-transition-group": "^2.8.0",
    "babel-eslint": "^9.0.0",
    "babel-plugin-transform-react-jsx-filter": "^6.0.1",
    "banner-js-webpack-plugin": "^0.0.0-beta.0",
    "css-modules-require-hook": "^4.2.3",
    "egg-index": "^0.0.0",
    "eslint": "^5.12.0",
    "eslint-config-ali": "^5.0.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-jsx-filter": "^6.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "gge": "^0.0.0-beta.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.6",
    "stylelint": "^9.10.1",
    "stylelint-config-ali": "^0.1.1",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-prettier": "^5.0.0",
    "tslint": "^5.18.0",
    "tslint-config-ali": "^0.2.4",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "umi": "^2.8.7",
    "umi-plugin-react": "^1.9.6",
    "webpack-bundle-analyzer": "^3.3.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:es",
      "git add"
    ],
    "*.ts": [
      "npm run lint:ts",
      "git add"
    ],
    "*.less": [
      "npm run lint:sty",
      "git add"
    ],
    "*.{js,jsx,json,ts,tsx,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
