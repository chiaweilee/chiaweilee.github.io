{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "test": "umi test --coverage",
    "lint": "npm run lint:es && npm run lint:ts",
    "lint:es": "eslint --ext .js .",
    "lint:ts": "tslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "dist": "cross-env NODE_ENV=server rundist --extend server/server-extend.js",
    "server": "cross-env NODE_ENV=server rundist --port 443 --https --sslkey cert/1604818_dear.red.key --sslcert cert/1604818_dear.red.pem --extend server/server-extend.js",
    "server:install": "npm install compression express github-webhook-handler node-cmd rundist graphql css-modules-require-hook asset-require-hook cross-env @babel/polyfill @babel/register @babel/core",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "antd": "^3.13.5",
    "current-device": "^0.8.0",
    "dva": "^2.5.0-beta.2",
    "iconfont-symbol": "^0.1.1",
    "notifyjs": "^3.0.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-transition-group": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/react-test-renderer": "^16.8.1",
    "asset-require-hook": "^1.2.0",
    "babel-eslint": "^9.0.0",
    "babel-plugin-transform-react-jsx-filter": "^6.0.1",
    "banner-js-webpack-plugin": "^0.0.0-beta.0",
    "cross-env": "^5.2.0",
    "css-modules-require-hook": "^4.2.3",
    "eslint": "^5.12.0",
    "eslint-config-ali": "^5.0.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-react-jsx-filter": "^6.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "github-webhook-handler": "^0.7.1",
    "graphql": "^14.1.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "node-cmd": "^3.0.0",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.2",
    "rundist": "^0.2.5",
    "stylelint": "^9.10.1",
    "stylelint-config-ali": "^0.1.1",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "umi": "^2.5.4",
    "umi-plugin-react": "^1.5.2",
    "umi-plugin-ssr": "^0.1.4",
    "webpack-bundle-analyzer": "^3.1.0",
    "why-did-you-update": "^1.0.6"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verify-commit-msg.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:es",
      "git add"
    ],
    "*.ts": [
      "npm run lint:ts",
      "git add"
    ]
  }
}
